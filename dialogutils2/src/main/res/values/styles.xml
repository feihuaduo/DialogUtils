<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="dialog" parent="android:style/Theme.Dialog">		
		<item name="android:windowBackground">@android:color/transparent</item>
		<!--是否模糊-->
		<item name="android:backgroundDimEnabled">true</item>	
	</style>
	
	<style name="dialog_button">
		<item name="android:background">@drawable/click_background</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/dialog_button_text_size</item>
		<item name="android:layout_height">@dimen/dialog_button_height</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>
	
	<style name="dialog_title">
		<item name="android:textIsSelectable">true</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textSize">20sp</item>
		<item name="android:id" tools:ignore="AaptCrash">@+id/tv_title</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center_horizontal</item>
	</style>
	

	
</resources>
